<Window x:Class="IAERP.Previsiones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IAERP"
        mc:Ignorable="d"
        Title="Previsiones" Height="450" Width="800"
        Loaded="Window_Loaded" Background="#FFF1F1F1">
    <Grid Name="Pantalla">
        <DockPanel HorizontalAlignment="Left" LastChildFill="true" VerticalAlignment="Top"  Width="{Binding ElementName=Pantalla,Path=ActualWidth, UpdateSourceTrigger=PropertyChanged}" Height="{Binding ElementName=Pantalla, Path=ActualHeight, UpdateSourceTrigger=PropertyChanged}">
            <DockPanel Height="80" LastChildFill="true" VerticalAlignment="Top" DockPanel.Dock="Top" UseLayoutRounding="True" Name="HeaderDock">
                <Grid x:Name ="ButtonsGrid" VerticalAlignment="Top" DockPanel.Dock="Top" Width="{Binding ElementName=HeaderDock, Path=ActualWidth, UpdateSourceTrigger=PropertyChanged}" Height="{Binding ElementName=HeaderDock, Path=ActualHeight, UpdateSourceTrigger=PropertyChanged}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="251*" />
                        <ColumnDefinition Width="330*" />
                        <ColumnDefinition Width="211"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="1" Grid.RowSpan="2"  Content="PREVISIONES" Margin="10,0,0,0" VerticalAlignment="Top" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="{x:Null}" Height="70" FontSize="48" Foreground="#FFF57F0F" HorizontalAlignment="Left" Width="320"/>
                    <Button x:Name="ButtonBuscar" Grid.Column="2" Grid.Row="0" Margin="5,10,125,5" Content="BUSCAR" Click="BuscarButton_Click" Background="#FFFFE0C1" BorderBrush="#FFD7D4D7"/>
                    <ComboBox x:Name="selFiltrar" Grid.Row="0" Grid.Column="2" Margin="91,10,10,5" BorderBrush="#FFD7D4D7" Background="#FFFFE0C1">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ComboBoxItem}">
                                <Setter Property="Background" Value="#FFFFE0C1"/>
                                <Setter Property="BorderBrush" Value="#FFD7D4D7"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBox.SelectedItem>
                            <Style TargetType="{x:Type ComboBoxItem}">
                                <Setter Property="Background" Value="#FFFFE0C1"/>
                                <Setter Property="BorderBrush" Value="#FFD7D4D7"/>
                            </Style>
                        </ComboBox.SelectedItem>
                        <ComboBoxItem Content="ID" Selected="selFiltarText" IsSelected="True" />
                        <ComboBoxItem Content="MODULO" Selected="selFiltarText"/>
                        <ComboBoxItem Content="TEMPORALIDAD" Selected="selFiltarText"/>
                        <ComboBoxItem Content="REPETICIONES" Selected="selFiltarText"/>
                        <ComboBoxItem Content="FECHA" Selected="selFiltarFecha"/>
                    </ComboBox>
                    <Image HorizontalAlignment="Left" Margin="10,19,0,0" Grid.Column="0" Grid.RowSpan="2" Width="255" Source="logoe.png" Grid.ColumnSpan="2" Height="43" VerticalAlignment="Top"/>
                </Grid>
            </DockPanel>
            <DockPanel LastChildFill="false" VerticalAlignment="Top" Margin="0" DockPanel.Dock="Top">
                <DockPanel DockPanel.Dock="Top" Margin="10" LastChildFill="True" UseLayoutRounding="True" Name="TableDock">
                    <DataGrid x:Name="DataGridPrevisiones" AutoGenerateColumns="false" UseLayoutRounding="True" DockPanel.Dock="Top" ColumnHeaderHeight="31" CanUserAddRows="false" AlternatingRowBackground="#FFFFE0C1" AreRowDetailsFrozen="True" IsReadOnly="True" Background="#FFFFE0C1" RowBackground="#FFFFBA75" HeadersVisibility="Column" HorizontalGridLinesBrush="#FFD7D4D7" VerticalGridLinesBrush="#FFD7D4D7" BorderBrush="#FFD7D4D7" MouseDoubleClick="DataGridPrevisiones_MouseDoubleClick">
                        <DataGrid.Resources>
                            <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="#FFFFE0C1" />
                                <Setter Property="BorderBrush" Value="#FFD7D4D7"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding id}" Header ="ID"/>
                            <DataGridTextColumn Binding="{Binding Modulo}" Header ="MODULO"/>
                            <DataGridTextColumn Binding="{Binding Temporalidad}" Header ="TEMPORTALIDAD"/>
                            <DataGridTextColumn Binding="{Binding Repeticiones}" Header ="REPETICIONES"/>
                            <DataGridTextColumn Binding="{Binding Fecha, StringFormat=\{0:dd/MM/yyyy\}}" Header ="FECHA" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </DockPanel>
            <DockPanel Height="60" LastChildFill="true" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" UseLayoutRounding="True" Name="BottomDock" >
                <Grid x:Name ="BottomGrid" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" Width="{Binding ElementName=BottomDock, Path=ActualWidth, UpdateSourceTrigger=PropertyChanged}" Height="{Binding ElementName=BottomDock, Path=ActualHeight, UpdateSourceTrigger=PropertyChanged}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="211"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Grid.Row="0"  Margin="5,10,10,5" Content="INICIO" Click="Inicio_Click" Background="#FFFFE0C1" BorderBrush="#FFD7D4D7"/>
                    <Label Grid.Column="1" Grid.Row="0" Content="Versión:" Margin="0,0,10,5" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="210"/>
                </Grid>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
